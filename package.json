  },
  "homepage": "https://github.com/mennonitengemeinde/church_site#readme",
  "dependencies": {
    "@fortawesome/fontawesome-free": "6.5.1",
    "alpinejs": "3.13.6",
    "dayjs": "1.11.10",
    "flatpickr": "4.6.13",
    "htmx.org": "1.9.10"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "daisyui": "^4.12.12",
