{
  "name": "church_site",
  "version": "1.0.0",
  "description": "**Still in planning mode**",
  "scripts": {
    "postinstall": "pwd && mkdir -p ./assets/vendor && ls && cp ./node_modules/@fortawesome/fontawesome-free/css/all.min.css ./node_modules/flatpickr/dist/flatpickr.min.css ./node_modules/flatpickr/dist/flatpickr.min.js ./node_modules/htmx.org/dist/htmx.min.js ./node_modules/alpinejs/dist/cdn.min.js ./node_modules/dayjs/dayjs.min.js ./assets/vendor && cp -r ./node_modules/@fortawesome/fontawesome-free/webfonts ./assets",
    "build": "npx tailwindcss -i ./core/styles/tailwind.css -o ./assets/css/output.css --minify",
    "dev": "npx tailwindcss -i ./core/styles/tailwind.css -o ./assets/css/output.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mennonitengemeinde/church_site.git"
  },
